<%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), html: { method: :put } do |form| %>
  <div class="container-fluid d-flex flex-column" style="height:100vh;">
    <div class="row justify-content-center m-auto">
      <h1>Account Settings</h1>
    </div>
    <div class="row justify-content-center m-auto">
      <div class="col-12">
        <div class="form-group">
          <label for="email">(*) Email</label>
          <div class="shadow rounded">
            <%= form.email_field :email, class:'form-control' %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div class="form-group">
          <label for="password">New Pasword (Leave blank if you don't want to change it)</label>
          <div class="shadow rounded">
            <%= form.password_field :password, class:'form-control', autocomplete: 'none' %></div>
        </div>
        <div class="form-group">
          <label for="password_confirmation">Confirm new pasword</label>
          <div class="shadow rounded">
            <%= form.password_field :password_confirmation, class:'form-control' %></div>
        </div>
        <div class="form-group">
          <label for="current_password">(*) Current password</label>
          <div class="shadow rounded">
            <%= form.password_field :current_password, class:'form-control' %></div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary m-4" style="margin:auto;">Save changes</button>
          <%= link_to "Cancel", :back, class:"btn btn-secondary m-4", style:"margin:auto;"  %>
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
      </div>
    </div>
  </div>
<% end %>

