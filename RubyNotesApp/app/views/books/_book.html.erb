<div class="card m-2">

  <%= link_to(book_notes_path(book), method: :get, class: 'card-background background-book img-fluid') do %>
    <h5 class="card-title p-2"> <span class='text-dark'> <%= book.name %> </span> </h5>
  <% end %>

  <div class="card-footer d-flex justify-content-center p-0">
    <% if not book.global? %>
      <%= link_to(edit_book_path(book), :method => :get) do %>
        <i class="fas fa-pen"></i>
      <% end %>
      <%= link_to book_path(book), method: :delete, data: { confirm: "Are you sure to delete book?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    <% end %>
  </div>
</div>