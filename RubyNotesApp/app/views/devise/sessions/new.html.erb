<%= form_with model: resource, scope: resource_name, url: session_path(resource_name) do |form| %>
  <div class="container-fluid d-flex flex-column" style="height:100vh;">
    <div class="row justify-content-center m-auto">
      <h1>Welcome to Ruby Notes</h1>
    </div>
    <div class="row justify-content-center m-auto">
      <div class="col-12">
        <div class="form-group">
          <label for="email">Email</label>
          <div class="shadow rounded">
            <%= form.email_field :email, class:'form-control' %></div>
        </div>
        <div class="form-group">
          <label for="password">Pasword</label>
          <div class="shadow rounded">
            <%= form.password_field :password, class:'form-control' %></div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= form.check_box :remember_me, class:'form-check-input' %>
            <%= form.label :remember_me, class:'form-check-label' %>
          </div>
        <% end %>
        <div class="text-center">
            <button type="submit" class="btn btn-primary m-4" style="margin:auto;">Log In</button> <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
