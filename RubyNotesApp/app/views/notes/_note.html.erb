<div class="card m-2">

  <%= link_to(book_note_path(@book, note), method: :get, class: 'card-background background-note') do %>
    <h5 class="card-title card-title-note"> <span> <%= note.name %> </span> </h5>
  <% end %>
  <div class="card-footer d-flex justify-content-center p-0">
    <%= link_to(edit_book_note_path(@book, note), :method => :get) do %>
      <i class="fas fa-pen"></i>
    <% end %>
    <%= link_to book_note_path(@book, note), method: :delete, data: { confirm: "Are you sure to delete this note?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>
</div>