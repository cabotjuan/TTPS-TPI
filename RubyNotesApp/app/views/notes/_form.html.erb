<%= form_with model: [@book, @note], local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %><br />
    <%= form.text_field :name, autofocus: true, autocomplete: "Note name", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %><br />
    <%= form.rich_text_area :content %>
  </div>
  <div class="actions m-2">
    <%= form.submit "Confirm",class:"btn btn-primary" %>
  <%= link_to('Cancel', book_notes_url(@book), method: :get, class:"btn btn-secondary") %>                
  </div>
<% end %>